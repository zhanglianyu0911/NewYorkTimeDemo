<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_item_height"
    android:layout_marginLeft="@dimen/news_item_margin_size"
    android:layout_marginRight="@dimen/news_item_margin_size"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/newsImage"
        android:layout_width="@dimen/news_item_image_size"
        android:layout_height="@dimen/news_item_image_size"
        android:layout_centerVertical="true"
        android:src="@drawable/new_york_time_logo" />

    <TextView
        android:id="@+id/headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/newsImage"
        android:layout_centerVertical="true"
        android:layout_marginLeft="80dp"
        android:text="HeadLine" />

</RelativeLayout>